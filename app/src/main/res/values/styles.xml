<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:textViewStyle">@style/SwingersTextViewStyle</item>
        <item name="android:buttonStyle">@style/SwingersButtonStyle</item>
        <item name="android:editTextStyle">@style/SwingersEditTextStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/SwingersTextViewStyle</item>

        <item name="android:checkedTextViewStyle">@style/SwingersTextViewStyle</item>

    </style>

    <style name="SwingersTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/skia</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

    </style>

    <!--<style name="SwingersEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>

    </style>-->
    <style name="SwingersEditTextStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/skia</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

    </style>


    <style name="SwingersButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/skia</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FacebookbuttonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/skia</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/facebook_btn</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="GooglebuttonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/skia</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/google_btn</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TwitterbuttonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/skia</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/twitter_btn</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PrimarybuttonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/skia</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/primary_btn</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
