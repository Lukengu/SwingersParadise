<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="9dp"
    android:orientation="vertical"
    android:id="@+id/parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:background="@drawable/photo_bg"
        android:id="@+id/profile_image"
        android:scaleType="fitXY"
        />

    <swingersparadise.app.solutions.novatech.pro.swingersparadise.ui.control.MultiSelectionSpinner
        android:id="@+id/sexual_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textMultiLine"
    android:lines="8"
    android:minLines="6"
    android:gravity="top|left"
    android:maxLines="120"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
        android:id="@+id/about_me"
        android:hint="About Me(8 to 120 characteres)"
        style="@style/SwingersEditTextStyle"


    />
    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept terms and Conditions"
        android:id="@+id/terms_conditions"
         />

    <EditText
        android:inputType="number"
        android:maxLines="5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/registered_pin"
        android:hint="Please Confirm the  SMS PIN  to login "
        style="@style/SwingersEditTextStyle"
        android:visibility="gone"

        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Please resend SMS"
            android:id="@+id/resend_sms"

            />

</LinearLayout>
</ScrollView>
